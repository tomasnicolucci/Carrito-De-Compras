@model tp_nt1.Models.Compra

@{
    ViewData["Title"] = "Compra Exitosa";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <div>
                    <h3 class="text-center" >Muchas Gracias Por Tu Compra!</h3>
                </div>

                <h1 class="text-center">Detalles de la compra</h1>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Total)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Total)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cliente)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cliente.Apellido)
                        </dd>
                    </dl>
                    <div>
                        <p>Por favor retir&aacute tu compra por la sucursal: @TempData["Sucursal"]</p>
                        <p>Este es el ID de tu compra: @Html.DisplayFor(model => model.Id)</p>
                        <p>Que la disfrutes!</p>
                    </div>
                </div>
                <hr />
                <div>
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>





