@*

*@
@{
    ViewData["Title"] = "Ingresar";
}

<form method="post" asp-action="Ingresar">
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input name="username" type="email" class="form-control" value="@ViewBag.Username" id="inputEmail3">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input name="password" type="password" class="form-control" id="inputPassword3">
        </div>
    </div>
    <div class="text-danger">
        @ViewBag.Error
    </div>
    <fieldset class="row mb-3">
        <legend class="col-form-label col-sm-2 pt-0">Rol</legend>
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="rol" id="gridRadios1" value="@Rol.Cliente" checked>
                <label class="form-check-label" for="gridRadios1">
                    @Rol.Cliente.ToString()
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="rol" id="gridRadios2" value="@Rol.Empleado">
                <label class="form-check-label" for="gridRadios2">
                    @Rol.Empleado.ToString()
                </label>
            </div>
            <div class="form-check disabled">
                <input class="form-check-input" type="radio" name="rol" id="gridRadios3" value="@Rol.Administrador">
                <label class="form-check-label" for="gridRadios3">
                    @Rol.Administrador.ToString()
                </label>
            </div>
        </div>
    </fieldset>
    <button type="submit" value="Login" class="btn btn-primary">Ingresar</button>
</form>